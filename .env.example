# API Keys - Copy this file to .env and fill in your actual keys
# DO NOT commit .env file to git

# LLM API Keys (choose at least one)
GROQ_API_KEY=your_groq_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Web Search APIs (choose at least one)
TAVILY_API_KEY=your_tavily_api_key_here
BRAVE_API_KEY=your_brave_api_key_here

# Semantic Scholar API (optional, has free tier)
SEMANTIC_SCHOLAR_API_KEY=your_semantic_scholar_api_key_here

# Model configurations (Groq)
DEFAULT_MODEL=llama-3.1-70b-versatile
JUDGE_MODEL=llama-3.1-70b-versatile
TEMPERATURE=0.7
MAX_TOKENS=4096

# Safety settings
ENABLE_GUARDRAILS=true
LOG_SAFETY_EVENTS=true

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
